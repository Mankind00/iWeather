<%- include("partials/header"); -%>

 <div class="row">
    <div class="col-sm-12"><h5><%= name %>, <%= country %></h5></div>
 </div>
 <div class="top-border row">
     <div class="col-sm"><h1 class="inline-text"><img class="weather-img" src =<%= weatherImg %> /><%= main %></h1> </div>
 </div>
 <div class= row">
     <div class="spacing col-sm">
        <h4><%=description.toUpperCase() %></h4><p class="temp-text"><i class="fas fa-temperature-low"></i>Hi <%= Math.floor(tempHi) %>&deg;     Lo <%= Math.floor(tempLo) %>&deg;</p>
     </div>
    
 </div>

<div class="row justify-content-md-between">
   <div class="col-sm-12 col-md-3">
      <div class="center"><h5 class="current-data">Feels like</h5></div>
      <div class="center"><p><i class="fas fa-temperature-low"></i> <%= Math.floor(feels_like) %>&deg;</p></div>
   </div>
   <div class="col-sm-12 col-md-3">
      <div class="center"><h5 class="current-data">Humidity</h5></div>
      <div class="center"><p><%= humidity %>%</p></div>
   </div>
   <div class="col-sm-12 col-md-3">
      <div class="center"><h5 class="current-data">Wind speed</h5></div>
      <div class="center"><p><%= wind_speed %> mph</p></div>
   </div>

</div>
<div class= row">
   <div class ="col-sm-12"><h2 class="inline-text">Previous dates captures</h2></div>

</div>

 <div class=" d-flex justify-content-around row">
    <div class="col-sm-2"><div class="spacing-past-content"><img  class="weather-img-past" src=<%= weatherimg1 %> alt="" /></div><div class="spacing-past-content"><p><%= description1.toUpperCase() %></p></div><div class="spacing-past-content"><p class="past-day-text"><%= justMonth1 %></p></div><div class="spacing-past-content"><p><%= justDay1 %></p></div></div>
    <div class="col-sm-2"><div class="spacing-past-content"><img class="weather-img-past" src=<%= weatherimg2 %> alt=""></div><div class="spacing-past-content"><p><%= description2.toUpperCase() %></p></div><div class="spacing-past-content"><p class="past-day-text"><%= justMonth1 %></p></div><div class="spacing-past-content"><p><%= justDay2 %></p></div></div>
    <div class="col-sm-2"><div class="spacing-past-content"><img class="weather-img-past" src=<%= weatherimg3 %> alt=""></div><div class="spacing-past-content"><p><%= description3.toUpperCase() %></p></div><div class="spacing-past-content"><p class="past-day-text"><%= justMonth1 %></p></div><div class="spacing-past-content"><p><%= justDay3 %></p></div></div>
    <div class="col-sm-2"><div class="spacing-past-content"><img class="weather-img-past" src=<%= weatherimg4 %> alt=""></div><div class="spacing-past-content"><p><%= description4.toUpperCase() %></p></div><div class="spacing-past-content"><p class="past-day-text"><%= justMonth1 %></p></div><div class="spacing-past-content"><p><%= justDay4 %></p></div></div>
 </div>


 <%- include("partials/footer"); -%>